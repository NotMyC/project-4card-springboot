{{>layout/header}}

<!--join.css 추가-->
<link rel="stylesheet" href="/css/guest/login.css">

<div id="login">
        <main class="login-form">
            <div class="cotainer">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header">로그인</div>
                            <div class="card-body">
                                <form action="" method="">
                                    <div class="form-group row">
                                        <label for="email_address" class="col-md-4 col-form-label text-md-right">E-Mail</label>
                                        <div class="col-md-6">
                                            <input type="text" id="email_address" class="form-control" name="email-address" placeholder="이메일을 입력해주세요. ex)phoca@phoca.com" required autofocus>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label for="password" class="col-md-4 col-form-label text-md-right">Password</label>
                                        <div class="col-md-6">
                                            <input type="password" id="password" class="form-control" name="password" placeholder="비밀번호를 입력해주세요." required>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="col-md-6 offset-md-4">
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" name="remember"> 이메일 기억하기
                                                </label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-6 offset-md-4">
                                        <button type="submit" class="btn btn-primary">
                                            로그인
                                        </button>
                                        <a href="#" class="btn btn-link">
                                            비밀번호를 잊으셨나요?
                                        </a>
                                    </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
            </div>
</main>

    </div>

{{>layout/footer}}
